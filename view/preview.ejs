<% layout('layout') %>
<h2><%= resume.fullName %></h2>
<p><%= resume.email %> | <%= resume.phone %></p>
<p><%= resume.summary %></p>

<h4>Skills</h4>
<p><%= resume.skills.join(", ") %></p>

<h4>Education</h4>
<ul>
  <% resume.education.forEach(e => { %>
    <li><%= e.degree %> - <%= e.institute %> (<%= e.year %>)</li>
  <% }) %>
</ul>

<h4>Experience</h4>
<ul>
  <% resume.experience.forEach(x => { %>
    <li><%= x.role %> at <%= x.company %> (<%= x.year %>)</li>
  <% }) %>
</ul>

<h4>Projects</h4>
<ul>
  <% resume.projects.forEach(p => { %>
    <li><%= p.name %>: <%= p.description %></li>
  <% }) %>
</ul>

<h4>Achievements</h4>
<ul>
  <% resume.achievements.forEach(a => { %>
    <li><%= a %></li>
  <% }) %>
</ul>

<a href="/resume">Edit</a>
<a href="/resume/download" class="btn btn-success">Download PDF</a>